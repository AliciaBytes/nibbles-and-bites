{
  "extends": "astro/tsconfigs/strict",
  "include": [".astro/types.d.ts", "**/*"],
  "exclude": ["dist"],
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@root/*": [
        "/*"
      ],
      "@src/*": [
        "src/*"
      ],
      "@components/*": [
        "src/components/*"
      ],
      "@internal/*": [
        "src/components/internal/*"
      ],
      "@styles/*": [
        "src/css/*"
      ],
    },
    "jsx": "preserve",
    "jsxImportSource": "solid-js"
  }
}
